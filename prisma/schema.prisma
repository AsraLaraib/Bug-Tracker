datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")   // required for production connection pooling
}

generator client {
  provider = "prisma-client-js"
}

model Bug {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  severity    String
  status      String   @default("Open")
  url         String?
  screenshot  String?
  createdAt   DateTime @default(now())
}

enum Severity {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  Open
  InProgress
  Closed
}

